@model Tech_Support.ViewModels.VMUser
@{
    ViewBag.Title = "User Profile";
    if (Model.Slika == null)
    {
        Model.Slika = "NoImage.jpg";
    }
}

<div class="container">
    @if (Model!=null)
    {
        <div class="container">
            <h2>User Profile</h2>
            <div class="row">
                <div class="col-md-4">
                    <img src="/ProfileImage/@Model.Slika" class="img-fluid" alt="Profile Picture">
                </div>
                <div class="col-md-8">
                    <p><strong>Name:</strong> @Model.Ime @Model.Prezime</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                </div>
                <form asp-action="UpdateAccount" , asp-controller="Home" method="get">
                    <div class="col-md-4">
                        <input type="hidden" name="id" value="@Model.KorisnikId" />
                        <button type="submit" class="btn btn-primary">Update your account</button>
                    </div>
                </form>
            </div>
        </div>
    }else
    {
        <div>
            <p>There is no user profile to display.\nSomething went wrong</p>
        </div>
    }
</div>
