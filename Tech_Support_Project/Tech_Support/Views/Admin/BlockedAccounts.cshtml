@model IEnumerable<Tech_Support.ViewModels.VMUser>
@{
}

<html>
    <head>
        <title>Admin - Blocked</title>
        <link rel="stylesheet" href="/css/Admin/BlockedAccounts.css"/>
    </head>
    <body>
        <h2>Blocked Accounts: </h2>

        @if (Model.Count()==0)
        {
            <p>There are no blocked accounts</p>
        }else
        {
        <table>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.KorisnickoIme)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    Ublock Account
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.KorisnickoIme)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <form asp-action="UnblockAccount" , asp-controller="Admin" method="post">
                    <td>
                        <input type="hidden" name="id" value="@item.KorisnikId" />
                        <button type="submit">Unblock</button>
                    </td>
                    </form>
                </tr>
            }
        </table>
    }
    </body>
</html>
