@using Tech_Support.ViewModels;
@model VMAnswerRequest
@{
    VMQuestion pitanje = ViewData["Question"] as VMQuestion;
}
<html>
<head>
    <meta charset="utf-8" />
    <title>Answer question</title>
    <link href="/css/AnswerQuestion.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="data-container">
        <div class="label">Title:</div>
        <div class="value">@pitanje.Naslov</div>
        <br />
        <div class="label">Text:</div>
        <div class="value">@pitanje.Tekst</div>
    </div>

    <div class="input-container">
        <form asp-action="AnswerQuestion" asp-controller="Registered" method="post">
            @Html.TextAreaFor(p=>p.text,  new { @class = "form-control", required = "required" })
            <input type="hidden" name="id" value="@pitanje.PitanjeId" />
            <button type="submit">Submit</button>
        </form>
    </div>
</body>
</html>